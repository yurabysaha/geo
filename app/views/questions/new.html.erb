<div class="container" id="container1">
  <div class="row centered-form">
    <div class="col-xs-12 col-sm-8 col-md-4 col-sm-offset-2 col-md-offset-4">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title text-center">Додати питання</h3>
        </div>
        <div class="panel-body">
          <%= form_for :question, url: questions_path, method: :post do |f| %>
              <div class="form-group">
                <%= f.text_field :title, class: 'form-control input-sm', placeholder: 'Введіть запитання...' %>
              </div>
              <div class="row">
                <div class="col-xs-6 col-sm-6 col-md-6">
                  <div class="form-group">
                    <%= f.text_field :A, class: 'form-control input-sm', placeholder: 'Варіант 1...' %>
                  </div>
                </div>
                <div class="col-xs-6 col-sm-6 col-md-6">
                  <div class="form-group">
                    <%= f.text_field :B, class: 'form-control input-sm', placeholder: 'Варіант 2...' %>
                  </div>
                </div>
              </div>
              <div class="row">
                <div class="col-xs-6 col-sm-6 col-md-6">
                  <div class="form-group">
                    <%= f.text_field :C, class: 'form-control input-sm', placeholder: 'Варіант 3...' %>
                  </div>
                </div>
                <div class="col-xs-6 col-sm-6 col-md-6">
                  <div class="form-group">
                    <%= f.text_field :D, class: 'form-control input-sm', placeholder: 'Варіант 4...' %>
                  </div>
                </div>
              </div>
              <div class="form-group">
                <%= f.text_field :good, class: 'form-control input-sm', placeholder: 'Введіть правильну...' %>
              </div>
              <%= f.submit value: 'Додати', class: 'btn btn-block btn-success' %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<style>

  .centered-form {
    margin-top: 120px;
    margin-bottom: 120px;
  }

  .centered-form .panel {
    background: rgba(255, 255, 255, 0.8);
    box-shadow: rgba(0, 0, 0, 0.3) 20px 20px 20px;
  }
</style>